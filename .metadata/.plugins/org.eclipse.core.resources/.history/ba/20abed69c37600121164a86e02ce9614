package com.example;

import javax.microedition.khronos.opengles.GL10;

import com.example.R;

import rajawali.BaseObject3D;
import rajawali.lights.DirectionalLight;
import rajawali.lights.PointLight;
import rajawali.materials.DiffuseMaterial;
import rajawali.materials.ParticleMaterial;
import rajawali.materials.PhongMaterial;
import rajawali.materials.SimpleMaterial;
import rajawali.primitives.Cube;
import rajawali.primitives.Plane;
import rajawali.primitives.Sphere;
import rajawali.renderer.RajawaliRenderer;
import android.content.Context;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.opengl.GLES20;

public class WallpaperRenderer extends RajawaliRenderer{
	
	private BaseObject3D camPos, camLookPos, cube;
		
	public WallpaperRenderer(Context context) {
		super(context);
		setFrameRate(30);
		setBackgroundColor(0x666666);
	}
		
	@Override
	public void initScene() {
		camPos = new BaseObject3D(); // a null object to hold the camera
		camLookPos = new BaseObject3D(); // a null object to position the camera "lookAt"
		
//		camPos.setPosition(mCamera.getPosition()); //Move the null to the starting camera position
		
		cube = new Cube(2);
		cube.setMaterial(new SimpleMaterial());
		cube.getMaterial().setUseColor(true);
		cube.setColor(0xff0000);
		addChild(cube);
		
		
	}

	@Override
	public void onDrawFrame(GL10 glUnused) {
	    super.onDrawFrame(glUnused);
	    
//	    mCamera.setPosition(camPos.getPosition());
	    mCamera.setRotation(camPos.getRotation());
	    camPos.setRotZ(camPos.getRotZ()+.1f);

	}
}